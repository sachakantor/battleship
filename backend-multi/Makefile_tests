CC = g++
CFLAGS=-g -Wall -Werror
LDFLAGS=-pthread

BINARY=test
JSONCPP=libs/jsoncpp/jsoncpp.a
OBJECTS=RWLock.o

.PHONY: clean all libs

all: $(BINARY) test

$(BINARY): rwlock_tests.cpp $(OBJECTS)
	$(CC) $(LDFLAGS) $(CFLAGS) -o $@ $^

%.o: %.cpp
	$(CC) -c $(CFLAGS) -o $@ $<

clean:
	rm -f $(OBJECTS)
	rm -f $(BINARY)
